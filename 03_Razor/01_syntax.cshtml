@page

<!-- block -->
@{
	string text = "Razor Page";
	int num = 15;
}

<!-- use in tag -->
<h2>@text</h2>

<!-- if -->
@if (num > 10) {
	<strong>@num</strong>
}
else if (num > 5) {
	<i>@num</i>
}
else {
	<small>@num</small>
}


