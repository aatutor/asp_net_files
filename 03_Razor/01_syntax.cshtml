<!-- functions -->
@functions {
	public int Sum(int a, int b) {
		return a + b;
	}
	public int Square(int n) => n * n;
}
<p>Sum of 5 and 4: <b> @Sum(5, 4)</b></p>
<p>Square of 4: <b>@Square(4)</b></p>


<!-- local function -->
@{
	void RenderName(string name) {
		<p>Name: <b>@name</b></p>
	}

	RenderName("Tom");
	RenderName("Bob");
} 
<div>@{ RenderName("Sam"); }</div>


